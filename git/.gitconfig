[alias]
	st = status
  ds = diff --staged
  lol = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
[push]
	default = simple
[user]
	name = Erik Nygren
	email = erik.nygren6@gmail.com
[merge]
	tool = meld
[mergetool]
  prompt = false
[mergetool "meld"]
  trustExitCode = true
  cmd = open -W -a Meld --args --auto-merge \"$PWD/$LOCAL\" \"$PWD/$BASE\" \"$PWD/$REMOTE\" --output=\"$PWD/$MERGED\"
[core]
	editor = /usr/bin/vim
	excludesfile = /Users/eriknygren/.gitignore_global
[commit]
  template = ~/.gitmessage
